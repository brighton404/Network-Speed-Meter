<Window 
    x:Class="TaskbarSpeedMeter.TaskbarOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="200" Height="32" WindowStyle="None"
    ResizeMode="NoResize"
    AllowsTransparency="True"
    Background="Transparent"
    Topmost="True"
    ShowInTaskbar="False"
    Focusable="False"
    MouseDown="Window_MouseDown">
    <Border CornerRadius="4" Background="#CC202020" Padding="6" Effect="{DynamicResource DropShadow}">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Upload -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                <TextBlock Text="▲" Foreground="Red" FontWeight="Bold" FontSize="14" Margin="0,0,4,0"/>
                <TextBlock x:Name="UploadText" Foreground="Red" FontSize="14" FontWeight="SemiBold" Text="3000.0 kB/s"/>
            </StackPanel>
            <!-- Download -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="▼" Foreground="LimeGreen" FontWeight="Bold" FontSize="14" Margin="0,0,4,0"/>
                <TextBlock x:Name="DownloadText" Foreground="LimeGreen" FontSize="14" FontWeight="SemiBold" Text="3000.0 kB/s"/>
            </StackPanel>
        </StackPanel>
    </Border>
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.4" Color="Black"/>
    </Window.Resources>
</Window>